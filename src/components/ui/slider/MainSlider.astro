---
interface SlideItem {
  image: string;
  title: string;
  description?: string;
  ctaText: string;
  ctaHref: string;
}

interface  Props {
  items: SlideItem[];
  showDescriptions?: boolean;
  style? : "dots" | "arrows" | "all" | "none";
}

const { items, showDescriptions = true, style = "arrows" } = Astro.props;
const slideId = crypto.randomUUID()
---

<div id={slideId} class="relative max-w-7xl mx-auto h-[60vh] md:h-[50vh] overflow-hidden  group">
  <div class="flex h-full transition-transform duration-500 ease-in-out">
    {items.map((item, index) => (
      <div class="flex-shrink-0 w-full h-full relative">
        
          <img 
            src={item.image || "/placeholder.svg"} 
            alt={item.title}
            class="w-full h-full object-cover"
          />
          <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12 lg:p-16 bg-gradient-to-t from-black/90 via-black/70 to-transparent text-white ">
        
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 transform transition-transform duration-300 ease-out group-hover:-translate-y-2">
                {item.title}
          </h2>
          {showDescriptions && item.description && (
                <p class="text-base md:text-lg opacity-90 mb-6 leading-relaxed transform transition-transform duration-300 ease-out group-hover:-translate-y-2">
                  {item.description}
                </p>
              )}
              <a
                href={item.ctaHref}
                class="inline-block px-6 py-3 bg-white text-black font-semibold rounded-full text-sm md:text-base hover:-translate-y-0.5 hover:bg-gray-100 transition-all duration-200"
              >
                {item.ctaText}
            </a>
            
        </div>
      </div>
    ))}
  </div>
</div>

