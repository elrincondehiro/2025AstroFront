---
import PageSupportingDarkmode from "@/layouts/PageSuportingDarkMode.astro";
import BaseHead from "@/components/head/BaseHead.astro";
import BaseHeader from "@/components/header/BaseHeader.astro";
import BaseFooter from "@/components/footer/BaseFooter.astro";

interface Props {
  title: string;
  description?: string;
}
const { title, description = "ERDHIRO" } = Astro.props;

---

<PageSupportingDarkmode>
  <BaseHead title={title} description={description} />
  <body class="min-h-screen flex flex-col">
    <BaseHeader />
    <main class="flex-grow">
      <slot />
    </main>
    <BaseFooter />
  </body>
</PageSupportingDarkmode>